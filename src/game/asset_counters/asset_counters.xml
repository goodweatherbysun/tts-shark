<Defaults>
    <Panel
        class="assetCounters"
        padding="0 0 250 0"
    />

    <VerticalLayout
        class="assetCounters"
        spacing="5"
        childAlignment="UpperRight"
        childForceExpandWidth="false"
        childForceExpandHeight="false"
    />

    <TableLayout
        class="assetCounters.money"
        preferredWidth="315"
        preferredHeight="80"
        padding="0 5 5 5"
        columnWidths="0 145"
        color="rgba(0, 0, 0, 0.9)"
        cellBackgroundColor="rgba(1, 1, 1, 0)"
    />

    <Row
        class="assetCounters.money"
        preferredHeight="35"
    />

    <Cell
        class="assetCounters.money"
    />

    <Text
        class="assetCounters.money"
        alignment="MiddleRight"
        fontSize="30"
        fontStyle="Bold"
        color="rgb(0.8, 0.8, 0.8)"
    />

    <TableLayout
        class="assetCounters.shares"
        padding="0 0 5 0"
        preferredWidth="160"
        autoCalculateHeight="true"
        columnWidths="0 90"
        cellSpacing="5"
        cellBackgroundColor="rgba(1, 1, 1, 0)"
        color="rgba(1, 1, 1, 0.5)"
    />

    <Row
        class="assetCounters.shares"
        preferredHeight="63"
    />

    <Text
        class="assetCounters.shares"
        alignment="MiddleRight"
        fontSize="50"
        fontStyle="Bold"
        outline="black"
        outlineSize="1.5 -1.5"
    />

    <Image
        class="assetCounters.shares"
        preserveAspect="true"
    />

    <Row
        class="assetCounters.boughtShares"
        dontUseTableRowBackground="true"
        color="rgba(1, 1, 1, 0.75)"
    />

    <HorizontalLayout
        class="assetCounters.boughtShares"
        preferredHeight="50"
        flexibleHeight="0"
        padding="5 5 5 5"
        spacing="5"
        childForceExpandWidth="false"
        color="rgba(0, 0, 0, 0.9)"
    />

    <Button
        class="assetCounters.boughtShares.reset"
        preferredWidth="60"
        fontSize="16"
        fontStyle="bold"
    />

    <Button
        class="assetCounters.boughtShares"
        preferredWidth="40"
        fontSize="18"
        fontStyle="bold"
    />

    <InputField
        class="assetCounters.boughtShares"
        preferredWidth="40"
        fontSize="18"
        fontStyle="bold"
        textAlignment="MiddleCenter"
        tooltipPosition="Below"
    />
</Defaults>

<Panel id="Panel#assetCounters" class="assetCounters">
    <VerticalLayout class="assetCounters">
        <TableLayout class="assetCounters.money">
            <!-- cell content generated by AssetCountersUiController -->
            <Row class="assetCounters.money">
                <Cell class="assetCounters.money">
                    <Text class="assetCounters.money">Cash: FT</Text>
                </Cell>
                <Cell id="Cell#assetCounters.money.cash" class="assetCounters.money" />
            </Row>
            <Row class="assetCounters.money">
                <Cell class="assetCounters.money">
                    <Text class="assetCounters.money">Shares: FT</Text>
                </Cell>
                <Cell id="Cell#assetCounters.money.shareValue" class="assetCounters.money" />
            </Row>
        </TableLayout>

        <TableLayout class="assetCounters.shares">
            <Row class="assetCounters.shares">
                <Cell id="Cell#assetCounters.shares.companies[green]" />
                <Cell>
                    <Image image="logo_nyso" class="assetCounters.shares" />
                </Cell>
            </Row>
            <Row class="assetCounters.shares">
                <Cell id="Cell#assetCounters.shares.companies[red]" />
                <Cell>
                    <Image image="logo_smith_and_smith" class="assetCounters.shares" />
                </Cell>
            </Row>
            <Row class="assetCounters.shares">
                <Cell id="Cell#assetCounters.shares.companies[blue]" />
                <Cell>
                    <Image image="logo_empire" class="assetCounters.shares" />
                </Cell>
            </Row>
            <Row class="assetCounters.shares">
                <Cell id="Cell#assetCounters.shares.companies[yellow]" />
                <Cell>
                    <Image image="logo_wings" class="assetCounters.shares" />
                </Cell>
            </Row>
        </TableLayout>

        <HorizontalLayout class="assetCounters.boughtShares">
            <Button
                class="assetCounters.boughtShares.reset"
                onClick="AssetCounters_onBoughtSharesResetClick"
                text="Reset"
            />
            <InputField
                id="InputField#assetCounters.boughtShares"
                class="assetCounters.boughtShares"
                characterValidation="Integer"
                onEndEdit="AssetCounters_onBoughtSharesChange"
                color="Gray"
                text="0"
                placeholder=""
                tooltip="Number of shares which were bought by the player in the given color."
            />
            <Button
                class="assetCounters.boughtShares"
                onClick="AssetCounters_onBoughtSharesIncreaseClick(1)"
                text="+"
            />
            <Button
                class="assetCounters.boughtShares"
                onClick="AssetCounters_onBoughtSharesIncreaseClick(5)"
                text="+5"
            />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
