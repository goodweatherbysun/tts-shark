<Defaults>
    <!-- Common Elements -->

    <Text
        class="h1"
        height="200"
        fontSize="20"
        fontStyle="Bold"
    />

    <Text
        class="paragraph"
        alignment="UpperLeft"
    />

    <Text
        class="number"
        alignment="MiddleRight"
    />

    <Button
        class="close"
        preferredHeight="50"
    />

    <Image raycastTarget="true" />

    <!-- windows -->

    <Panel
        class="window"
        padding="10 10 10 10"
        color="white"
        allowDragging="true"
        returnToOriginalPositionWhenReleased="false"
    />

    <VerticalLayout
        class="windowLayout"
        childForceExpandHeight="false"
        spacing="10"
    />

    <HorizontalLayout
        class="windowButtons"
        childForceExpandHeight="false"
        spacing="10"
    />

    <Button
        class="windowButton"
        preferredHeight="40"
    />

    <!-- Last Turn Dialog -->

    <Panel
        class="lastTurnDialog"
        width="400"
        height="150"
    />

    <!-- Control Bar -->

    <Panel
        class="controlBar"
        rectAlignment="LowerRight"
        offsetXY="-110 0"
    />

    <TableLayout
        class="controlBar"
        autoCalculateHeight="true"
        color="white"
        padding="5 5 5 5"
        cellSpacing="5"
        cellBackgroundColor="rgba(1, 1, 1, 0)"
    />

    <Row
        class="controlBar"
        preferredHeight="30"
    />

    <Button
        class="controlBar"
        fontSize="20"
        fontStyle="Bold"
    />

    <Toggle
        class="controlBar"
        fontSize="15"
        tooltipPosition="Below"
        tooltipBackgroundColor="Black"
    />

    <!-- Asset Counters -->

    <!-- height = 2x35 + 4x63 + 40 + 6x10 -->
    <Panel
        class="assetCounters"
        height="422"
        rectAlignment="UpperRight"
        offsetXY="0 -250"
    />

    <TableLayout
        class="assetCounters"
        cellSpacing="10"
        cellBackgroundColor="rgba(1, 1, 1, 0)"
        columnWidths="0 90"
        autoCalculateHeight="true"
        useGlobalCellPadding="false"
    />

    <Row
        class="assetCounters.money"
        preferredHeight="35"
    />

    <Cell
        class="assetCounters.money"
        padding="0 10 0 0"
    />

    <Text
        class="assetCounters.money"
        alignment="MiddleRight"
        fontSize="30"
        fontStyle="Bold"
        outline="black"
        outlineSize="1.5 -1.5"
        color="white"
    />

    <Row
        class="assetCounters.shares"
        preferredHeight="63"
    />

    <Text
        class="assetCounters.shares"
        alignment="MiddleRight"
        fontSize="50"
        fontStyle="Bold"
        outline="black"
        outlineSize="1.5 -1.5"
    />

    <Image
        class="assetCounters.shares"
        preserveAspect="true"
    />

    <HorizontalLayout
        class="assetCounters.boughtShares"
        spacing="5"
        childForceExpandWidth="false"
    />

    <Button
        class="assetCounters.boughtShares.reset"
        preferredWidth="60"
        fontSize="16"
        fontStyle="bold"
    />

    <Button
        class="assetCounters.boughtShares"
        preferredWidth="40"
        fontSize="18"
        fontStyle="bold"
    />

    <InputField
        class="assetCounters.boughtShares"
        preferredWidth="40"
        fontSize="18"
        fontStyle="bold"
        textAlignment="MiddleCenter"
        tooltipPosition="Below"
    />
</Defaults>

<Panel id="Panel#assetCounters" class="assetCounters">
    <TableLayout class="assetCounters">
        <!-- cell content generated by AssetCountersUiController -->
        <Row class="assetCounters.money">
            <Cell id="Cell#assetCounters.money.cash" class="assetCounters.money" columnSpan="2" />
        </Row>
        <Row class="assetCounters.money">
            <Cell id="Cell#assetCounters.money.shareValue" class="assetCounters.money" columnSpan="2" />
        </Row>
        <Row class="assetCounters.shares">
            <Cell id="Cell#assetCounters.shares.companies[green]" />
            <Cell>
                <Image image="logo_nyso" class="assetCounters.shares" />
            </Cell>
        </Row>
        <Row class="assetCounters.shares">
            <Cell id="Cell#assetCounters.shares.companies[red]" />
            <Cell>
                <Image image="logo_smith_and_smith" class="assetCounters.shares" />
            </Cell>
        </Row>
        <Row class="assetCounters.shares">
            <Cell id="Cell#assetCounters.shares.companies[blue]" />
            <Cell>
                <Image image="logo_empire" class="assetCounters.shares" />
            </Cell>
        </Row>
        <Row class="assetCounters.shares">
            <Cell id="Cell#assetCounters.shares.companies[yellow]" />
            <Cell>
                <Image image="logo_wings" class="assetCounters.shares" />
            </Cell>
        </Row>
        <Row class="assetCounters.boughtShares" preferredHeight="40">
            <Cell columnSpan="2">
                <HorizontalLayout class="assetCounters.boughtShares" spacing="5" childForceExpandWidth="false">
                    <Panel flexibleWidth="1" />

                    <Button
                        class="assetCounters.boughtShares.reset"
                        onClick="onAssetCounterBoughtSharesResetClick"
                        text="Reset"
                    />
                    <InputField
                        id="InputField#assetCounters.boughtShares"
                        class="assetCounters.boughtShares"
                        characterValidation="Integer"
                        onEndEdit="onAssetCounterBoughtSharesChange"
                        color="Gray"
                        text="0"
                        placeholder=""
                        tooltip="Count shares bought this round here"
                    />
                    <Button
                        class="assetCounters.boughtShares"
                        onClick="onAssetCounterBoughtSharesIncreaseClick(1)"
                        text="+"
                    />
                    <Button
                        class="assetCounters.boughtShares"
                        onClick="onAssetCounterBoughtSharesIncreaseClick(5)"
                        text="+5"
                    />
                </HorizontalLayout>
            </Cell>
        </Row>
    </TableLayout>
</Panel>

<Include src="game/leaderboard/leaderboard"/>

<Panel class="controlBar" width="200">
    <VerticalLayout childForceExpandHeight="false">
        <Panel flexibleHeight="1" />

        <TableLayout class="controlBar">
            <Row id="Row#controlBar.leaderboardButton" class="controlBar" active="false">
                <Cell>
                    <Button
                        class="controlBar"
                        onClick="onControlBarLeaderboardClick"
                        text="Leaderboard"
                    />
                </Cell>
            </Row>
            <Row class="controlBar" visibility="Admin">
                <Cell>
                    <Toggle
                        id="Toggle#controlBar.enableLeaderboard"
                        class="controlBar"
                        isOn="false"
                        onValueChanged="onControlBarEnableLeaderboardChange"
                        text="Enable Leaderboard"
                        tooltip="Allow Players to view Leaderboard"
                    />
                </Cell>
            </Row>
            <Row class="controlBar">
                <Cell>
                    <Toggle
                        class="controlBar"
                        isOn="true"
                        onValueChanged="onControlBarShowAssetCountersChange"
                        text="Show Asset Counters"
                    />
                </Cell>
            </Row>
        </TableLayout>
    </VerticalLayout>
</Panel>

<Panel id="Panel#lastTurnDialog" class="lastTurnDialog window" active="false" visibility="Host">
    <VerticalLayout class="windowLayout">
        <Text class="h1">Last Turn</Text>
        <Text class="paragraph">This is the last turn of the game. Enable the Leaderboard to determine the winner of the game.</Text>

        <Panel flexibleHeight="1" />

        <HorizontalLayout class="windowButtons">
            <Button
                class="windowButton"
                onClick="onEnableLeaderboardClick"
                text="Enable Leaderboard"
            />
            <Button
                class="windowButton"
                onClick="onDismissLastTurnDialogClick"
                text="Dismiss"
            />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
