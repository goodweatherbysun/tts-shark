<Defaults>
    <!-- Common Elements -->

    <Text
        class="h1"
        height="200"
        fontSize="20"
        fontStyle="Bold"
    />

    <Text
        class="paragraph"
        alignment="UpperLeft"
    />

    <Text
        class="number"
        alignment="MiddleRight"
    />

    <Button
        class="close"
        preferredHeight="50"
    />

    <Image raycastTarget="true" />

    <!-- windows -->

    <Panel
        class="window"
        padding="10 10 10 10"
        color="white"
        allowDragging="true"
        returnToOriginalPositionWhenReleased="false"
    />

    <VerticalLayout
        class="windowLayout"
        childForceExpandHeight="false"
        spacing="10"
    />

    <HorizontalLayout
        class="windowButtons"
        childForceExpandHeight="false"
        spacing="10"
    />

    <Button
        class="windowButton"
        preferredHeight="40"
    />

    <!-- Last Turn Dialog -->

    <Panel
        class="lastTurnDialog"
        width="400"
        height="150"
    />

    <!-- Control Bar -->

    <Panel
        class="controlBar"
        rectAlignment="LowerRight"
        offsetXY="-110 0"
    />

    <TableLayout
        class="controlBar"
        autoCalculateHeight="true"
        color="white"
        padding="5 5 5 5"
        cellSpacing="5"
        cellBackgroundColor="rgba(1, 1, 1, 0)"
    />

    <Row
        class="controlBar"
        preferredHeight="30"
    />

    <Button
        class="controlBar"
        fontSize="20"
        fontStyle="Bold"
    />

    <Toggle
        class="controlBar"
        fontSize="15"
        tooltipPosition="Below"
        tooltipBackgroundColor="Black"
    />
</Defaults>

<Include src="game/asset_counters/asset_counters"/>

<Include src="game/leaderboard/leaderboard"/>

<Panel class="controlBar" width="200">
    <VerticalLayout childForceExpandHeight="false">
        <Panel flexibleHeight="1" />

        <TableLayout class="controlBar">
            <Row id="Row#controlBar.leaderboardButton" class="controlBar" active="false">
                <Cell>
                    <Button
                        class="controlBar"
                        onClick="onControlBarLeaderboardClick"
                        text="Leaderboard"
                    />
                </Cell>
            </Row>
            <Row class="controlBar" visibility="Admin">
                <Cell>
                    <Toggle
                        id="Toggle#controlBar.enableLeaderboard"
                        class="controlBar"
                        isOn="false"
                        onValueChanged="onControlBarEnableLeaderboardChange"
                        text="Enable Leaderboard"
                        tooltip="Allow Players to view Leaderboard"
                    />
                </Cell>
            </Row>
            <Row class="controlBar">
                <Cell>
                    <Toggle
                        class="controlBar"
                        isOn="true"
                        onValueChanged="onControlBarShowAssetCountersChange"
                        text="Show Asset Counters"
                    />
                </Cell>
            </Row>
        </TableLayout>
    </VerticalLayout>
</Panel>

<Panel id="Panel#lastTurnDialog" class="lastTurnDialog window" active="false" visibility="Host">
    <VerticalLayout class="windowLayout">
        <Text class="h1">Last Turn</Text>
        <Text class="paragraph">This is the last turn of the game. Enable the Leaderboard to determine the winner of the game.</Text>

        <Panel flexibleHeight="1" />

        <HorizontalLayout class="windowButtons">
            <Button
                class="windowButton"
                onClick="onEnableLeaderboardClick"
                text="Enable Leaderboard"
            />
            <Button
                class="windowButton"
                onClick="onDismissLastTurnDialogClick"
                text="Dismiss"
            />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
